<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.UsersProfile.SeekerEditProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:paddingRight="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/edit_profile_backbtn"
                android:layout_width="9dp"
                android:layout_height="19dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_backbtn_19px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/edit_profile"
                android:textColor="@color/primary_color1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/edit_profile_editbtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_edit_20px" />

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/img_defalt_profile_80px"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:text="@string/edit_profile_img"
                        android:textColor="@color/primary_color2"
                        android:textSize="15sp" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile_name"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ic_human_profile_24px" />

                        <EditText
                            android:id="@+id/edit_profile_name"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:maxLines="1"
                            android:inputType="text"
                            android:background="@drawable/edit_text_blank"
                            />


                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile_email"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ic_email_48px" />

                        <EditText
                            android:id="@+id/edit_profile_email"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_centerVertical="true"                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/edit_text_blank"
                            android:clickable="false"
                            android:focusable="false"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile_phonenum"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box"
                        >

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ic_phone_48px" />

                        <EditText
                            android:id="@+id/edit_profile_phonenum"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_centerVertical="true"                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/edit_text_blank"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_address"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ic_address_24px" />

                        <EditText
                            android:id="@+id/edit_profile_address"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/edit_text_blank"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey" />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile_age"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/ic_birthdate_32px" />

                        <EditText
                            android:id="@+id/edit_profile_age"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_centerVertical="true"                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:maxLines="1"
                            android:inputType="number"
                            android:background="@drawable/edit_text_blank"
                            />

                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"

                    >

                    <Button
                        android:id="@+id/edit_profile_save_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_wrapper"
                        android:text="@string/edit_profile_save"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:visibility="invisible"
                        />

                </RelativeLayout>


            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

</FrameLayout>