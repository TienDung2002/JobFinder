<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/item_job_background">

        <RelativeLayout
            android:id="@+id/topSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/user_ava"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/avatar"/>

            <TextView
                android:id="@+id/rec_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/user_ava"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/Ji_recName"/>

            <ImageButton
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_bookmark_white24px" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/middleSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topSection"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:id="@+id/layoutmiddleSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/JiPosition1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Ji_position1"
                    android:textColor="@color/black"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/JiPosition2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"
                    android:text="@string/Ji_position2"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutmiddleSection1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutmiddleSection"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/NumRecTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="@string/Ji_num_of_rec_title"/>

                <TextView
                    android:id="@+id/NumOfRecruits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"
                    android:text="@string/Ji_num_of_recruits"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"
                    android:text="@string/Ji_sub"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutmiddleSection2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutmiddleSection1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Ji_recruited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:text="@string/Ji_recruited1"/>

                <TextView
                    android:id="@+id/NumOfRecruited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"
                    android:text="@string/Ji_num_of_recruits"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:textSize="17sp"
                    android:text="@string/Ji_sub"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottomSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/middleSection"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/posttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_hint_ForgotPass"
                android:textSize="15sp"
                android:text="@string/Ji_posttime"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/unit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="1dp"
                android:layout_toStartOf="@+id/salary"
                android:textSize="16sp"
                android:text="@string/Ji_unit1"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_toStartOf="@+id/unit2"
                android:textSize="16sp"
                android:text="@string/Ji_salary"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/unit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textColor="@color/grey_hint_ForgotPass"
                android:layout_toStartOf="@+id/unit3"
                android:textSize="15sp"
                android:text="@string/Ji_unit2"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/unit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textColor="@color/grey_hint_ForgotPass"
                android:layout_alignParentEnd="true"
                android:textSize="15sp"
                android:text="@string/Ji_unit3"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>