<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    app:cardCornerRadius="25dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/topSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/emp_in_job_user_avt"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    tools:ignore="contentDescription"
                    android:scaleType="centerCrop"
                    android:background="@drawable/image_loading_80px"/>

                <TextView
                    android:id="@+id/emp_in_job_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/username"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                tools:ignore="RelativeOverlap">

                <Button
                    android:id="@+id/check_in_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_in"
                    android:background="@drawable/wallet_btn_shape"
                    android:backgroundTint="@color/income_color"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    />

            </LinearLayout>
            
        </RelativeLayout>
        

    </LinearLayout>

</androidx.cardview.widget.CardView>