<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="3"
    android:background="@drawable/transparent_background">

    <!-- ImageButton 1 -->
    <LinearLayout
        android:id="@+id/checkinBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_grid_checkin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/grid_job_checkin"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- ImageButton 2 -->
    <LinearLayout
        android:id="@+id/walletBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_grid_wallet50px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/grid_wallet"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- ImageButton 3 -->
    <LinearLayout
        android:id="@+id/JobappliedBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_grid_jobapplied50px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/grid_job_applied"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- ImageButton 4 -->
    <LinearLayout
        android:id="@+id/JobsearchBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_grid_jobsearch50px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/grid_findNewJob"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- ImageButton 5 -->
    <LinearLayout
        android:id="@+id/reportsBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_grid_reports" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/grid_reports"
            android:textSize="14sp" />
    </LinearLayout>
</GridLayout>
