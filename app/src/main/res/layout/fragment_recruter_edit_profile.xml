<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.UsersProfile.RecruterEditProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >

            <Button
                android:id="@+id/edit_profile_backbtn"
                android:layout_width="9dp"
                android:layout_height="19dp"
                android:background="@drawable/ic_backbtn_19px"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/primary_color1"
                android:layout_centerVertical="true"
                />
            <Button
                android:id="@+id/edit_profile_editbtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_edit_20px"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/img_defalt_profile_80px"
                        android:layout_marginTop="40dp"
                        android:layout_gravity="center_horizontal"                     >
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile_img"
                        android:textColor="@color/primary_color2"
                        android:textSize="15sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"

                        />



                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile_name"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_human_profile_24px"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            />
                        <EditText
                            android:id="@+id/edit_profile_name"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_centerVertical="true"                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:maxLines="1"
                            android:inputType="text"
                            android:background="@drawable/edit_text_blank"
                            />

                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile_email"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box"
                        >

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_email_48px"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            />
                        <EditText
                            android:id="@+id/edit_profile_email"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_centerVertical="true"                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:maxLines="1"
                            android:inputType="text"
                            android:background="@drawable/edit_text_blank"
                            />

                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_hotline"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box"
                        >

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_phone_48px"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            />

                        <EditText
                            android:id="@+id/edit_profile_phonenum"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_centerVertical="true"                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/edit_text_blank"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey" />

                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_address"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box"
                        >

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_address_24px"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            />
                        <EditText
                            android:id="@+id/edit_profile_address"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_centerVertical="true"                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:maxLines="1"
                            android:inputType="text"
                            android:background="@drawable/edit_text_blank"
                            />

                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_taxcode"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box"
                        >

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_tax_50px"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            />
                        <EditText
                            android:id="@+id/edit_profile_taxnum"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_centerVertical="true"                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:maxLines="1"
                            android:inputType="number"
                            android:background="@drawable/edit_text_blank"
                            />

                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_foundationDay"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box"
                        >

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_age_32px"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            />
                        <EditText
                            android:id="@+id/edit_profile_description"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_centerVertical="true"                            android:textColor="@color/black"
                            android:textColorHint="@color/grey"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:maxLines="1"
                            android:inputType="text"
                            android:background="@drawable/edit_text_blank"
                            />

                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_typeOfBusiness"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box"
                        >

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_businesstye_50px"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            />
                        <EditText
                            android:id="@+id/edit_profile_bustype"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_centerVertical="true"                            android:textColorHint="@color/grey"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:background="@drawable/edit_text_blank"

                            />

                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rec_sectors"
                        android:textColor="@color/primary_color1"
                        android:textSize="18sp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/input_box"
                        >

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_business_area_50px"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            />
                        <EditText
                            android:id="@+id/edit_profile_busSec"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            android:layout_centerVertical="true"                            android:textColorHint="@color/grey"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="15dp"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:background="@drawable/edit_text_blank"
                            />

                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"

                    >

                    <Button
                        android:id="@+id/edit_profile_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_profile_save"
                        android:textColor="@color/black"
                        android:background="@drawable/btn_wrapper"
                        android:textSize="20sp"
                        android:visibility="invisible"

                        />

                </RelativeLayout>



            </LinearLayout>

        </ScrollView>


    </RelativeLayout>

</FrameLayout>