<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/home_bg"
    tools:context=".UI.UserDetailInfo.WNuserReviewedActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <Button
            android:id="@+id/Backbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/transparent_background"
            android:drawableStart="@drawable/ic_back24px"/>

        <RelativeLayout
            android:id="@+id/headerLayout"
            android:layout_below="@id/Backbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/wnuser_avatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/image_loading_80px"/>

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@+id/wnuser_avatar"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_below="@+id/userName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/totalRatingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review_rating_Average"
                    android:textSize="16sp" />

                <RatingBar
                    android:id="@+id/ratingID"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.1"
                    android:progressTint="@color/primary_color2"/>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/review_recycler_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerLayout"
            android:text="@string/review_recycler_title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="start" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@id/review_recycler_title"
            android:layout_above="@+id/btn_wrap"
            tools:listitem="@layout/row_wnuser_reviewed"/>

        <LinearLayout
            android:id="@+id/btn_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="1">

            <Button
                android:id="@+id/approve_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/wallet_btn_shape"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/approve"
                android:textSize="12sp"
                android:minHeight="45dp"/>

            <Button
                android:id="@+id/reject_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/wallet_btn_shape"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="@string/reject"
                android:layout_marginStart="30dp"
                android:minHeight="45dp"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/noDataImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:layout_below="@id/review_recycler_title"
            android:visibility="gone">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/no_job_img"
                android:src="@drawable/no_reviews_img"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/review_recycler_no_reviewed"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="10dp"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading"
            android:layout_marginTop="150dp"
            android:layout_below="@id/review_recycler_title" />
    </RelativeLayout>
</RelativeLayout>
