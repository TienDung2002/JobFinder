            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".UI.Notifications.NotificationsActivity"
            android:exported="false"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".UI.Jobs.JobsActivity"
            android:exported="false"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".UI.JobPosts.JobpostsActivity"
            android:exported="false"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".Adapter.adapterdefault"
            android:exported="false"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".UI.Home.HomeActivity"
            android:exported="false"
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".UI.SplashScreen.SplashActivity"
            android:exported="true"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>