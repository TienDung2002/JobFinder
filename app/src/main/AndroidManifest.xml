        android:supportsRtl="true"
        android:theme="@style/Theme.JobFinder"
        tools:targetApi="31">
        <activity
            android:name=".UI.Signup.SeekerSignupActivity"
            android:exported="false"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".UI.Signup.RecruiterSignupActivity"
            android:exported="false"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".UI.Login.LoginActivity"
            android:exported="false"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".UI.Wallet.WalletActivity"
            android:exported="false"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".UI.UsersProfile.UserDetailActivity"
